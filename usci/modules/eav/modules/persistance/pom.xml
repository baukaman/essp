            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>2.10</version>
                <configuration>
                    <systemPropertyVariables>
                        <spring.profiles.default>oracle</spring.profiles.default>
                    </systemPropertyVariables>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>properties-maven-plugin</artifactId>
                <version>1.0-alpha-2</version>
                <executions>
                    <execution>
                        <phase>initialize</phase>
                        <goals>
                            <goal>read-project-properties</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <files>
                        <file>src/main/resources/properties/oracle.properties</file>
                    </files>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.jooq</groupId>
                <artifactId>jooq-codegen-maven</artifactId>
                <version>3.1.0</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                    </execution>
                </executions>
                <dependencies>
                    <dependency>
                        <groupId>com.oracle</groupId>
                        <artifactId>ojdbc6</artifactId>
                        <version>11.2.0.4</version>
                    </dependency>
                </dependencies>
                <configuration>
                    <jdbc>
                        <driver>${jdbc.driver}</driver>
                        <url>${jdbc.url}</url>
                        <user>${jdbc.user}</user>
                        <password>${jdbc.password}</password>
                    </jdbc>
                    <generator>
                        <name>org.jooq.util.DefaultGenerator</name>
                        <database>
                            <name>${jooq.db.name}</name>
                            <includes>(SC_.*)|(EAV_.*)|(BATCH_.*)|(LOGIC_.*)|(MNT_.*)|(MAIL_.*)</includes>
                            <excludes></excludes>
                            <inputSchema>${jooq.db.schema}</inputSchema>
                            <customTypes>
                                <!--<customType>
                                    <name>java.lang.Long</name>
                                    <converter>kz.bsbnb.usci.tool.jooq.OracleLongConverter</converter>
                                </customType>-->
                                <!--<customType>
                                    <name>java.lang.Boolean</name>
                                    <converter>kz.bsbnb.usci.tool.jooq.OracleBooleanConverter</converter>
                                </customType>-->
                                <customType>
                                    <name>java.lang.Integer</name>
                                    <converter>kz.bsbnb.usci.tool.jooq.OracleIntegerConverter</converter>
                                </customType>
                                <customType>
                                    <name>java.lang.Double</name>
                                    <converter>kz.bsbnb.usci.tool.jooq.OracleDoubleConverter</converter>
                                </customType>
                                <customType>
                                    <name>java.sql.Timestamp</name>
                                    <converter>kz.bsbnb.usci.tool.jooq.OracleTimestampConverter</converter>
                                </customType>
                            </customTypes>
                            <forcedTypes>
                                <!--<forcedType>
                                    <name>java.lang.Long</name>
                                    <expressions>(.*\..*_ID)|(.*\.ID)|(.*\..*_COUNT)|(.*\.INDEX_)|(.*\.LEVEL_)</expressions>
                                </forcedType>-->
                                <!--<forcedType>
                                    <name>java.lang.Boolean</name>
                                    <expressions>(.*BOOLEAN.*\.VALUE)|(.*\.IS_CLOSED)|(.*\.IS_LAST)|(.*\.IS_KEY)|(.*\.IS_NULLABLE)|(.*\.IS_IMMUTABLE)|(.*\.IS_REFERENCE)|(.*\.IS_DISABLED)</expressions>
                                </forcedType>-->
                                <forcedType>
                                    <name>java.lang.Integer</name>
                                    <expressions>(.*\.CONTAINER_TYPE)|(.*INTEGER.*\.VALUE)</expressions>
                                </forcedType>
                                <forcedType>
                                    <name>java.lang.Double</name>
                                    <expressions>(.*DOUBLE.*\.VALUE)</expressions>
                                </forcedType>
                                <forcedType>
                                    <name>java.sql.Timestamp</name>
                                    <expressions>(.*\.RECEIPT_DATE)|(.*\.EVENT_BEGIN_DT)|(.*\.EVENT_END_DT)|(.*\.UPDATE_DATE)|(.*\.CREATION_DATE)|(.*\.SENDING_DATE)|(.*\.UPDATED_DATE)</expressions>
                                </forcedType>
                            </forcedTypes>
                        </database>
                        <target>
                            <packageName>kz.bsbnb.eav.persistance.generated</packageName>
                            <directory>${basedir}/target/generated-sources/jooq</directory>
                        </target>
                    </generator>
                </configuration>
            </plugin>
